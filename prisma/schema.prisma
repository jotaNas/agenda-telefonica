// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contato {
  id        Int        @id @default(autoincrement())
  nome      String
  idade     Int
  telefones Telefone[]
}

model Telefone {
  idContato Int
  id        Int     @id @default(autoincrement())
  numero    String
  contato   Contato @relation(fields: [idContato], references: [id])

  @@index([idContato])
}
